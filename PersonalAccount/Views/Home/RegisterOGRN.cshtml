@model PersonalAccount.Models.LoginViewModel
@{
    ViewBag.Title = "ДельтаКредит - Оценочным компаниям";
}

<div class="navbar navbar-inverse" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">PersonalAccount</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a href="/Home/Index">Главная</a></li>
                <li><a href="/Home/Register">Регистрация</a></li>
                <li class="active"><a href="/Home/RegisterOGRN">Регистрация ОГРН</a></li>
                <li><a href="/Home/RegisterUser">Регистрация Пользователя</a></li>
            </ul>
        </div>
    </div>
</div>
<div class="wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-8">
                <div class="card">
                    <a href="https://www.deltacredit.ru" class="simple-text"><img src="@Url.Content("~/Content/img/logo.png")"></a>
                    <div class="text-center">
                        <h1>Регистрация</h1>
                    </div>
                    <div class="row" style="height:200px; padding-top:80px;">
                        <div class="col-md-4">
                            <div class="form-group">
                                <p>Введите ОГРН/ОГРНИП *</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input id="party" name="party" type="text" />
                                <script type="text/javascript">
                                        $("#party").suggestions({
                                            token: "3bb69fe709e61337c7da821c21e0b1faa85dc7c3",
                                            type: "PARTY",
                                            /* Вызывается, когда пользователь выбирает одну из подсказок */
                                            onSelect: function(suggestion) {
                                                console.log(suggestion);
                                            }
                                        });
                                </script>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger btn-fill btn-wd">Далее</button>
                    </div>
                    </div>
                </div>
            <div class="col-md-3">
                <div class="row card">
                    <form method="post" action="/Account/Login" class="log-form">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Логин</label>
                                @Html.TextBoxFor(t => t.Email, new { @class = "form-control border-input" })
                                @Html.ValidationMessageFor(t => t.Email)
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Пароль</label>
                                @Html.PasswordFor(t => t.Password, new { @class = "form-control border-input" })
                                @Html.ValidationMessageFor(t => t.Password)
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.CheckBoxFor(t => t.RememberMe, new { @class = "form-control border-input checkbox" })
                                <label>Запомнить меня</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="text-center">
                                    <button type="submit" class="btn btn-danger btn-fill btn-wd">Войти</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="text-center">
                                <a href="Register">Регистрация</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




